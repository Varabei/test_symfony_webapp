{% extends 'base.html.twig' %}

{% block title %}Welcome to notification app!{% endblock %}

{% block body %}
<div class="main-page position-relative">
	<div class="container admin-link">
		<a href="{{ path('app_admin_notifications') }}" type="button" class="btn btn-primary">Edit notifications</a>
	</div>
	{% for notification in notifications %}
	<div class="toast-container p-3 bottom-0 start-50 translate-middle-x">
		<div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
			<div class=toast-header><strong>{{ notification.title }}</strong></div>
			<div class="toast-body">{{ notification.content }}</div>
		</div>
	</div>
	{% endfor %}
</div>
{% endblock %}